<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:minWidth="220dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:useDefaultMargins="true"
    android:alignmentMode="alignBounds"
    android:columnCount="2"
    android:padding="16dp">

    <TextView
        android:id="@+id/txt_label_id"
        android:labelFor="@+id/txt_id"
        android:text="@string/label_gift_id"
        />
    <TextView
        android:id="@+id/txt_id"/>

    <TextView
        android:id="@+id/txt_label_user_id"
        android:labelFor="@+id/txt_user_id"
        android:text="@string/label_gift_user_id"
        />
    <TextView
        android:id="@+id/txt_user_id"/>

    <TextView
        android:id="@+id/txt_label_title"
        android:labelFor="@+id/txt_title"
        android:text="@string/label_gift_title"
        />
    <TextView
        android:id="@+id/txt_title"/>

    <TextView
        android:id="@+id/txt_label_body"
        android:labelFor="@+id/txt_body"
        android:text="@string/label_gift_body"
        />
    <!--
        The android:layout_width and android:layout_gravity settings
        in the following XML elements are needed to prevent
        the TextView to go over the edge.
        AFAIK Daniel Lew was the first to post this solution:
        http://daniel-codes.blogspot.de/2012/01/gridlayout-view-clipping-issues.html
    -->
    <TextView
        android:id="@+id/txt_body"
        android:layout_width="0dp"
        android:layout_gravity="fill_horizontal"/>

</GridLayout>